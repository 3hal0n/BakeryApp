# Backend example environment variables
# Copy this file to `.env` and replace values before running locally.

# Postgres connection string
# Example: postgres://user:password@localhost:5432/bakerydb
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DATABASE

# JWT signing secret
JWT_SECRET=your_jwt_secret_here

# Server port (optional)
PORT=5000

# Upstash or Redis settings (use whichever your project uses).
# If using Upstash REST API:
UPSTASH_REDIS_REST_URL=https://eu1-upstash-rest.example
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# Or a standard Redis URL (for local Redis)
REDIS_URL=redis://localhost:6379

# Node environment
NODE_ENV=development

# Optional external API base URL (if used by backend)
EXTERNAL_API_URL=
# Copy this to `.env` and fill values (DO NOT commit your `.env`)
PORT=5000
DATABASE_URL=postgresql://<USER>:<PASSWORD>@<HOST>:5432/<DB_NAME>
REDIS_URL=redis://:<PASSWORD>@<HOST>:<PORT>
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
EXPO_PUSH_ENDPOINT=https://exp.host/--/api/v2/push/send
